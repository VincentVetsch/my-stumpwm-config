;; -*-lisp-*-

(in-package :stumpwm)
(ql:quickload "xembed")

(set-module-dir (uiop:subpathname* (user-homedir-pathname) "opt/stumpwm/contrib/"))
(setf *config-path* (uiop:subpathname* (user-homedir-pathname) ".config/stumpwm/"))

(setf *window-border-style* :thin)
(setf *normal-border-width* 1)

(load (uiop:subpathname* *config-path* "debug.lisp"))
(load (uiop:subpathname* *config-path* "scratchpad.lisp"))
(load (uiop:subpathname* *config-path* "applications.lisp"))
(load (uiop:subpathname* *config-path* "frame-placement.lisp"))
(load (uiop:subpathname* *config-path* "session.lisp"))
(load (uiop:subpathname* *config-path* "binds.lisp"))
(load (uiop:subpathname* *config-path* "mouse.lisp"))
(load (uiop:subpathname* *config-path* "mode-line.lisp"))
